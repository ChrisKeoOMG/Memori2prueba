<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/main"
    android:layout_height="match_parent"
    >

    <ImageView
        android:id="@+id/backgroundImage"
        android:layout_width="731dp"
        android:layout_height="411dp"
        android:contentDescription="Fondo del menú"
        android:scaleType="centerCrop"
        android:src="@drawable/fondo17" />

    <TextView
        android:id="@+id/gameTitle"
        android:layout_width="328dp"
        android:layout_height="71dp"
        android:shadowColor="#000000"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="6"
        android:text="MemoriEnglish"
        android:textColor="#FFFFFF"
        android:textSize="48sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="202dp"
        tools:layout_editor_absoluteY="30dp" />


    <ImageButton
        android:id="@+id/btn_play"
        android:layout_width="163dp"
        android:layout_height="165dp"
        android:background="@drawable/play"
        android:contentDescription="Jugar"
        tools:layout_editor_absoluteX="284dp"
        tools:layout_editor_absoluteY="145dp" />

    <ImageButton
        android:id="@+id/btn_tutorial"
        android:layout_width="71dp"
        android:layout_height="76dp"
        android:background="@drawable/tutobtn"
        android:contentDescription="Tutorial"
        tools:layout_editor_absoluteX="179dp"
        tools:layout_editor_absoluteY="322dp" />

    <ImageButton
        android:id="@+id/btn_settings"
        android:layout_width="66dp"
        android:layout_height="71dp"
        android:background="@drawable/compartirbtn"
        android:contentDescription="Configuración"
        tools:layout_editor_absoluteX="24dp"
        tools:layout_editor_absoluteY="325dp" />


    <ImageButton
        android:id="@+id/btn_exit"
        android:layout_width="62dp"
        android:layout_height="63dp"
        android:background="@drawable/btnsalir"
        android:contentDescription="Salir"
        tools:layout_editor_absoluteX="25dp"
        tools:layout_editor_absoluteY="16dp" />

    <ImageView
        android:id="@+id/id_Dino"
        android:layout_width="208dp"
        android:layout_height="268dp"
        android:background="@drawable/dino"
        tools:layout_editor_absoluteX="507dp"
        tools:layout_editor_absoluteY="101dp" />

    <ImageButton
        android:id="@+id/btn_social"
        android:layout_width="67dp"
        android:layout_height="73dp"
        android:background="@drawable/ajustes"
        android:contentDescription="Redes sociales"
        tools:layout_editor_absoluteX="101dp"
        tools:layout_editor_absoluteY="322dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
