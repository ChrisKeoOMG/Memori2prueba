<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- Fondo -->
    <ImageView
        android:id="@+id/backgroundImage"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        android:contentDescription="Fondo del menú"
        android:src="@drawable/fondo17"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Título -->
    <TextView
        android:id="@+id/gameTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MemoriEnglish"
        android:textSize="40sp"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:shadowColor="#000000"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="6"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="24dp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Botón Jugar -->
    <ImageButton
        android:id="@+id/btn_play"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="@drawable/play"
        android:contentDescription="Jugar"
        app:layout_constraintTop_toBottomOf="@id/gameTitle"
        android:layout_marginTop="24dp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Botón Tutorial -->
    <ImageButton
        android:id="@+id/btn_tutorial"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@drawable/ajustes"
        android:contentDescription="Tutorial"
        app:layout_constraintTop_toBottomOf="@id/btn_play"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="24dp" />

    <!-- Botón Compartir -->
    <ImageButton
        android:id="@+id/btn_settings"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@drawable/compartirbtn"
        android:contentDescription="Configuración"
        app:layout_constraintTop_toBottomOf="@id/btn_play"
        android:layout_marginTop="24dp"

        app:layout_constraintStart_toEndOf="@id/btn_tutorial"

        />

    <!-- Botón Redes Sociales -->
    <ImageButton
        android:id="@+id/btn_social"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@drawable/tutobtn"
        android:contentDescription="Redes sociales"
        app:layout_constraintTop_toBottomOf="@id/btn_play"
        android:layout_marginTop="24dp"

        app:layout_constraintStart_toEndOf="@id/btn_settings"
/>

    <!-- Botón Salir -->
    <ImageButton
        android:id="@+id/btn_exit"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@drawable/btnsalir"
        android:contentDescription="Salir"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="24dp"/>

    <!-- Imagen Dino -->
    <ImageView
        android:id="@+id/id_Dino"
        android:layout_width="200dp"
        android:layout_height="250dp"
        android:background="@drawable/dino"
        android:contentDescription="Dino personaje"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"
/>

</androidx.constraintlayout.widget.ConstraintLayout>
