<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Fondo -->
    <ImageView
        android:id="@+id/backgroundImage"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        android:src="@drawable/fondo11"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Botón atrás -->
    <ImageButton
        android:id="@+id/btn_atras"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@drawable/regresarbtn"
        android:scaleType="fitCenter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- CONTENEDOR GENERAL CON SCROLL -->
    <ScrollView
        android:id="@+id/scrollContainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/btn_atras"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="20dp">

            <!-- TÍTULO -->
            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold"
                android:gravity="center"
                android:shadowColor="#000"
                android:shadowDx="3"
                android:shadowDy="3"
                android:shadowRadius="5"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="6dp"
                android:layout_gravity="center"/>

            <!-- HOST PANEL -->
            <LinearLayout
                android:id="@+id/layoutHost"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#99000000"
                android:padding="16dp"
                android:layout_marginTop="4dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="OPCIÓN A: CREAR PARTIDA"
                    android:textColor="#FFD700"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:gravity="center"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tu dirección IP:"
                    android:textColor="#FFFFFF"
                    android:gravity="center"
                    android:layout_marginTop="6dp"/>

                <!-- IP EN UNA SOLA LÍNEA -->
                <TextView
                    android:id="@+id/tvIpAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Detectando IP..."
                    android:textColor="#00FF00"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_marginTop="2dp"
                    android:singleLine="true"
                    android:ellipsize="none"
                    android:adjustViewBounds="true"/>

                <Button
                    android:id="@+id/btnHost"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="SER ANFITRIÓN"
                    android:textStyle="bold"
                    android:backgroundTint="#FF9800"
                    android:layout_marginTop="12dp"/>
            </LinearLayout>

            <!-- CLIENT PANEL -->
            <LinearLayout
                android:id="@+id/layoutClient"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#99000000"
                android:padding="16dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="OPCIÓN B: UNIRSE A PARTIDA"
                    android:textColor="#4FC3F7"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:gravity="center"/>

                <EditText
                    android:id="@+id/etIpInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Ingresa la IP del anfitrión (Ej: 192.168.1.5)"
                    android:textColorHint="#AAAAAA"
                    android:textColor="#FFFFFF"
                    android:backgroundTint="#FFFFFF"
                    android:inputType="number|textNoSuggestions"
                    android:digits="0123456789."
                    android:gravity="center"
                    android:layout_marginTop="10dp"/>

                <Button
                    android:id="@+id/btnConnect"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="CONECTAR"
                    android:textStyle="bold"
                    android:backgroundTint="#2196F3"
                    android:layout_marginTop="12dp"/>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
